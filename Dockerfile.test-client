FROM golang:1.23-alpine as builder

# Install build dependencies
RUN apk add --no-cache git ca-certificates tzdata

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the test client
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o test-client test_grpc_client.go

# Final stage
FROM alpine:3.18

# Install runtime dependencies
RUN apk --no-cache add ca-certificates tzdata

WORKDIR /app

# Copy the binary from builder stage
COPY --from=builder /app/test-client .

# Create non-root user
RUN addgroup -g 1000 testuser && \
    adduser -D -s /bin/sh -u 1000 -G testuser testuser

# Change ownership of the binary
RUN chown testuser:testuser /app/test-client

# Switch to non-root user
USER testuser

# Run the test client
ENTRYPOINT ["/app/test-client"] 